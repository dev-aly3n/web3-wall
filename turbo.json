{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "env": ["NOTION_API_KEY", "NOTION_WAITING_DATABASE_ID"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "env": ["NOTION_API_KEY", "NOTION_WAITING_DATABASE_ID"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "env": ["NOTION_API_KEY", "NOTION_WAITING_DATABASE_ID"]
    },
    "format": {},
    "check:types": {}
  }
}
